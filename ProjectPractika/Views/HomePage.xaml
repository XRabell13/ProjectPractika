<UserControl x:Class="ProjectPractika.Views.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectPractika.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="26px" />
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <ScrollViewer>
            <StackPanel>
           
                
            
            <TextBlock Text="{DynamicResource hp_welcome}" />
            <TextBlock Text="{DynamicResource hp_dateTime}"/>
            <TextBlock Text="{Binding DateTimeStr, Mode=TwoWay}"/>

            <Image Source="\Resources\Images\ct-2022.jpeg" Width="600px"  />

        </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
