<UserControl x:Class="ProjectPractika.Views.Authorization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectPractika"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Canvas Background="#FFF0F0F0" Grid.Column="0"/>
            
            <StackPanel  Grid.Column="0"  Margin="0"  VerticalAlignment="Center">
                <TextBox  Text="{Binding Log, Mode=TwoWay}" TextAlignment="Center" Margin="30 10 30 0" MaxWidth="400"/>
                <PasswordBox local:PasswordHelper.Attach="True" local:PasswordHelper.Password="{Binding Password, Mode=TwoWay}" 
                HorizontalContentAlignment="Center" Margin="30 10 30 0" MaxWidth="400"/>
                <Button HorizontalAlignment="Stretch" Command="{Binding LogIn}" Content="{DynamicResource logIn}" Margin="30 10 30 0" MaxWidth="400" IsDefault="True"/>
            </StackPanel>
        </Grid> 
    </Grid>
</UserControl>
